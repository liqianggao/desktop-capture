{
   "camera": {
      "cinnamon": {
         "enabled": true,
         "title": "Cinnamon Screenshot"
      },
      "gnome-screenshot": {
         "enabled": true,
         "title": "Default",
         "-append": "-f {DIRECTORY}/{FILENAME}.png",
         "toggles": [
            { "Copy to clipboard": "-c" },
            { "Remove border": "-B", "Include border": "-b" },
            { "Use timer": "-d {DELAY}" }
         ],
         "supported": {
            "area": "--area",
            "current-window": "-d {DELAY} --window",
            "screen": "-d {DELAY}"
         },
         "custom": {
            "Interactive": "gnome-screenshot -i"
         }
      },
      "shutter": {
         "enabled": true,
         "title": "Shutter",
         "-cursor-on": "-c",
         "-cursor-off": "-C",
         "-append": "-p test -e {CURSOR} -d {DELAY} --min_at_startup --disable_systray -e",
         "supported": {
            "menu": "--menu",
            "tooltip": "--tooltip",
            "window-section": "--section",
            "area": "--select",
            "current-window": "--active",
            "window": "--window",
            "screen": "--full"
         }
      },
      "xwd": {
         "enabled": true,
         "title": "XWD",
         "-append": " | convert - {DIRECTORY}/{FILENAME}.png",
         "supported": {},
         "custom": {
            "Window": "#DC_WINDOW_HELPER# bash -c \"xwd -id {X_WINDOW} | convert - {DIRECTORY}/{FILENAME}.png\"",
            "Screen": "bash -c \"xwd -root | convert - {DIRECTORY}/{FILENAME}.png\""
         }
      },
      "import": {
         "enabled": true,
         "title": "ImageMagick",
         "supported": {},
         "custom": {
            "Window": "#DC_WINDOW_HELPER# import -window root -crop {WIDTH}x{HEIGHT}+{X}+{Y} {DIRECTORY}/{FILENAME}.png",
            "Area": "#DC_AREA_HELPER# import -window root -crop {WIDTH}x{HEIGHT}+{X}+{Y} {DIRECTORY}/{FILENAME}.png",
            "Root window": "import -window root {DIRECTORY}/{FILENAME}.png",
            "Screen": "import -window root -display :0.0 -screen {DIRECTORY}/{FILENAME}.png"
         }
      }
   },
   "recorder": {
      "cinnamon": {
        "title": "Cinnamon Recorder",
        "enabled": true
      },
      "ffmpeg": {
        "title": "FFmpeg",
        "enabled": true,
        "-sound-on": "-f alsa -ac 2 -i pulse",
        "-sound-off": "",
        "stop-command": "killall ffmpeg",
        "custom": {
          "Area (Window)": "#DC_WINDOW_HELPER# bash -c \"ffmpeg {SOUND} -f x11grab -s {WIDTH}x{HEIGHT} -r 30 -qscale 1 -i :0.0+{X},{Y} {DIRECTORY}/{FILENAME}.mkv\"",
          "Area (Select)": "#DC_AREA_HELPER# bash -c \"ffmpeg {SOUND} -f x11grab -s {WIDTH}x{HEIGHT} -r 30 -qscale 1 -i :0.0+{X},{Y} {DIRECTORY}/{FILENAME}.mkv\"",
          "Screen": "bash -c \"ffmpeg {SOUND} -f x11grab -s {SCREEN_WIDTH}x{SCREEN_HEIGHT} -r 30 -qscale 1 -i :0.0 {DIRECTORY}/{FILENAME}.mkv\""
        }
      },
      "avconv": {
        "title": "avconv (ffmpeg rewrite)",
        "enabled": true,
        "-sound-on": "-f alsa -ac 2 -i pulse",
        "-sound-off": "",
        "stop-command": "killall avconv",
        "custom": {
          "Area (Window)": "#DC_WINDOW_HELPER# bash -c \"avconv {SOUND} -f x11grab -s {NICEWIDTH}x{NICEHEIGHT} -r 30 -qscale 1 -i :0.0+{X},{Y} {DIRECTORY}/{FILENAME}.mkv\"",
          "Area (Select)": "#DC_AREA_HELPER# bash -c \"avconv {SOUND} -f x11grab -s {NICEWIDTH}x{NICEHEIGHT} -r 30 -qscale 1 -i :0.0+{X},{Y} {DIRECTORY}/{FILENAME}.mkv\"",
          "Screen": "bash -c \"avconv {SOUND} -f x11grab -s {SCREEN_WIDTH}x{SCREEN_HEIGHT} -r 30 -qscale 1 -i :0.0 {DIRECTORY}/{FILENAME}.mkv\""
        }
      },
      "gtk-recordmydesktop": {
        "title": "Record My Desktop",
        "enabled": true,
        "-sound-on": "",
        "-sound-off": "--no-sound",
        "stop-command": "killall recordmydesktop",
        "custom": {
          "Open GUI": "gtk-recordmydesktop",
          "Area (Window)": "#DC_WINDOW_HELPER# recordmydesktop {SOUND} -x {X} -y {Y} --width {WIDTH} --height {HEIGHT} -o {DIRECTORY}/{FILENAME}.ogv",
          "Area (Select)": "#DC_AREA_HELPER# recordmydesktop {SOUND} -x {X} -y {Y} --width {WIDTH} --height {HEIGHT} -o {DIRECTORY}/{FILENAME}.ogv"
        }
      },
      "byzanz": {
         "title": "Byzanz",
         "enabled": true,
         "-sound-on": "-a",
         "-sound-off": "",
         "stop-command": "pkill -nf 'sleep 191449'",
         "custom": {
            "Record {FORMAT|UPPER} (Window)": "#DC_WINDOW_HELPER# byzanz-record {SOUND} -e 'sleep 191449' -x {X} -y {Y} -w {WIDTH} -h {HEIGHT} {DIRECTORY}/{FILENAME}.{FORMAT}",
            "Record {FORMAT|UPPER} (Select)": "#DC_AREA_HELPER# byzanz-record {SOUND} -e 'sleep 191449' -x {X} -y {Y} -w {WIDTH} -h {HEIGHT} {DIRECTORY}/{FILENAME}.{FORMAT}"
         },
         "controls": [
            { "type": "select", "var": "FORMAT", "name": "Output format...", "default": "gif", "values": [
              { "name": "Animated GIF image (GIF)", "value": "gif" },
              { "name": "Flash Screen video (FLV)", "value": "flv" },
              { "name": "Ogg Theora video (OGV)", "value": "ogv" },
              { "name": "WebM video (WEBM)", "value": "webm" }
            ]},
            { "type": "toggle", "var": "SOUND", "name": "Record sound", "default": "on", "onValue": "-a", "offValue": "" }
         ]
      }
   }
}
